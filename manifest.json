{
  "manifest_version": 2,
  "version": "1.0",
  "author": "nlabs",
  "name": "nlabs Firefox Suite",
  "short_name": "nl FFSuite",
  "description": "Extra user options for Firefox.",
  "icons": {
    "128": "img/icon/128.png",
	"96": "img/icon/96.png",
	"48": "img/icon/48.png",
	"16": "img/icon/16.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse",
    "storage",
    "<all_urls>"
  ],
  "incognito": "spanning",
  "background": {
	"persistent": true,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "labs@nogueira.live"
    }
  }
}
